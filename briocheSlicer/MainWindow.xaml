<Window x:Class="briocheSlicer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Brioche-slicer" Height="800" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Open STL..." Click="OpenStl_Click" />
        </ToolBar>
        <!--Allow drag and drop and define event handler-->
        <Helix:HelixViewport3D ZoomExtentsWhenLoaded="True" x:Name="View" AllowDrop="True" Drop="View_Drop">
            <Helix:SunLight/>

            <!--This is the parameter we need to change in c#-->
            <ModelVisual3D x:Name="scene" /> 
            
        </Helix:HelixViewport3D>
    </DockPanel>
</Window>
